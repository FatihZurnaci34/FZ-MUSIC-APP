@using FZMusicEntites.Models
@model List<LikeMusic>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
<link rel="icon" href="~/one-music-gh-pages/img/core-img/favicon.ico">
<link rel="stylesheet" href="~/one-music-gh-pages/style.css">
<link rel="stylesheet" href="~/one-music-gh-pages/Style1.css">

@using (Html.BeginForm("Index", "Search", FormMethod.Get))
{
    <p>
        <b>Aramak İstediğiniz Müzik:</b>  @Html.TextBox("p")
        <input type="submit" value="Ara">
    </p>
}

<div class="popular_song">

    <div class="btn_s">
        <i id="left_scroll" class="bi bi-arrow-short"></i>
        <i id="right_scroll" class="bi bi-arrow-short"></i>
    </div>
    <div class="row oneMusic-albums">
        @foreach (var likes in Model)
        {

            <!-- Play Listler -->
            <div class="col-12 col-sm-4 col-md-3 col-lg-2 single-album-item t c p">
                <div class="single-album">                   
                      <img style="height:250px;" src="@likes.Music.Image" alt="">
                    <div class="album-info">
                        <a href="#">
                            <h5>@likes.Music.Name</h5>
                        </a>
                        <p>@likes.Music.Artist.Name @likes.Music.Artist.Surname</p>
                        <a href="/LikeMusic/Like/@likes.Music_id"><i style="font-size: 25px " class="bi bi-star-fill"></i> </a><i style="color:green; font-size: 25px " class="bi bi-play-circle-fill"></i>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

