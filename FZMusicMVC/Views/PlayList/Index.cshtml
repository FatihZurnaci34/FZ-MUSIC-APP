@using FZMusicEntites.Models
@model List<Playlist>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
<link rel="icon" href="~/one-music-gh-pages/img/core-img/favicon.ico">
<link rel="stylesheet" href="~/one-music-gh-pages/style.css">
<link rel="stylesheet" href="~/one-music-gh-pages/Style1.css">
<style>
    body {
        background-color: #000000;
    }
</style>
<div class="h4">
    <h4>Çalma Listelerim</h4>
</div>

<div class="popular_song">

    <div class="btn_s">
        <i id="left_scroll" class="bi bi-arrow-short"></i>
        <i id="right_scroll" class="bi bi-arrow-short"></i>
    </div>
    <div class="row oneMusic-albums">
        @foreach (var play in Model)
        {

            <!-- Play Listler -->
            <div class="col-12 col-sm-4 col-md-3 col-lg-2 single-album-item t c p">
                <div class="single-album">
                    <img src="~/one-music-gh-pages/img/bg-img/a2.jpg" alt="">
                    <div class="album-info">
                        <a href="#">
                            <h5>@play.Name</h5>
                        </a>
                        <p>Çalma Listesi</p>
                        <a href="/Playlist/PlayListListele/@play.Id"><i style="font-size: 25px " class="bi bi-list-ul"></i></a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<a href="/Playlist/deletePlaylist/@play.Id"><i style="font-size: 25px " class="bi bi-x-circle-fill"></i></a> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; <i style="color:green; font-size: 25px " class="bi bi-play-circle-fill"></i>
                    </div>
                </div>
            </div>
        }
    </div>
</div>






